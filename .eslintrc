{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-await-in-loop": "warn",
    "semi": ["error", "never"],
    "no-unused-vars": "warn",
    "no-empty": "warn",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "space-in-parens": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "no-multi-spaces": "error",
    "comma-spacing": "error",
    "no-extra-parens": ["error", "functions"],
    "no-template-curly-in-string": "error",
    "curly": "warn",
    "eqeqeq": ["warn", "always"],
    "no-eq-null": "warn"
  }
}
